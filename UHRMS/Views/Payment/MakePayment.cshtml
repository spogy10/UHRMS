@model UHRMS.Models.Payment
@{
    ViewBag.Title = "MakePayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Payment</h2>

<form class="form-horizontal">
    <div class="form-horizontal">

        <label>Student ID</label>
        @Html.TextBoxFor(m => m.studentId, new { @class = "form-control" })

        <label>Amount</label>
        @Html.TextBoxFor(m => m.amount, new { @class = "form-control" })


        <label>Account Number</label>
        @Html.TextBoxFor(m => m.accountnumber, new { @class = "form-control" })

        <label>Card Type</label>
        @Html.TextBoxFor(m => m.cardtype, new { @class = "form-control" })


        <br>

        <br>

        <div class="form-inline">

            <label>Expiration Month</label>
            @Html.TextBoxFor(m => m.expirationMonth, new { @class = "form-control" })


            <label>Expiration Year</label>
            @Html.TextBoxFor(m => m.expirationYear, new { @class = "form-control" })

            <label>CSV</label>
            @Html.TextBoxFor(m => m.CSV, new { @class = "form-control" })


        </div>
    </div>
    <br>
    <br>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>


    </div>

</form>

